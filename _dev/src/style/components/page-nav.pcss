.page-nav {
  @extend animation;

  height: 110px;
  margin-bottom: 100px;
  background: #1d2632;
  background: rgba(0, 0, 0, .3);

  @media (--tablet) {
    margin-bottom: 92px;
  }

  @media (--mobile) {
    height: 66px;
    margin-bottom: 18px;
  }

  .wrap {
    height: 100%;
    @extend %flex;
    align-items: center;
  }

  .main-logo {
    width: 150px;
    transform: translate3d(0,-10px,0);

    @media (--mobile) {
      width: 74px;
      transform: translate3d(0,0,0);
    }

    img {
      max-width: 100%;
    }
  }

  &--js {
    background: #283645;
    box-shadow: 0 1px 0 0 #000000;
  }


  &_menu {
    @extend animation;
    @extend ulUnstyled;
    @extend %flex;
    width: 605px;
    color: #ffffff;

    @media (--tablet) {
      /*display: flex;*/
      visibility: hidden;
      opacity: 0;

      position: absolute;
      /*top: 111px;*/
      top: 65px;
      left: 0;
      /*left: -100%;*/

      flex-direction: column;
      align-items: stretch;
      width: 100%;
      text-align: center;
      z-index: -10;
    }

    @media (--mobile) {
      /*top: 67px;*/
      top: 40px;
    }

    li {
      position: relative;
      display: inline-block;
      font-size: 0;

      &:after {
        @extend animation;
        content: '';
        position: absolute;
        left: 0;
        bottom: 0;
        width: 0;
        height: 2px;
        background: #fff;
      }

      &:hover:after {
        width: 100%;
      }

      &:active {
        opacity: .3;

        &:after {
          display: none;
        }
      }

      @media (--tablet) {
        margin-bottom: 1px;
        background: var(--black);
        box-shadow: 0 1px 0 0 #000000, inset 0 1px 0 0 rgba(255, 255, 255, 0.15);
      }
    }

    a {
      display: inline-block;
      padding: 14px 0;
      font-size: 18px;
      line-height: 1.0;
      color: inherit;
      font-weight: 300;

      @media (--tablet) {
        width: 100%;
        padding: 15px 0;

        font-weight: 700;
        line-height: 33px;
        text-transform: uppercase;
      }
    }
  }

  &_burger {

  }

  &_close {
    visibility: hidden;
    opacity: 0;
  }
}

.js-showMenu {
  background: var(--black);
  box-shadow: 0 1px 0 0 #000000;
}
.page-header {

  margin-bottom: 60px;
  background: var(--mainColor);
  background: linear-gradient(var(--mainColor), #0F84E1);
  
  &__logo {
    @extend .wrap;

    padding: 35px 0;
    font-size: 36px;
    font-weight: 600;
    font-style: normal;
    font-stretch: normal;
    line-height: normal;
    letter-spacing: normal;

    @media (--tablet) {
      padding-top: 30px;
      padding-bottom: 30px;
    }
    
    a {
      @extend animation;

      position: relative;
      color: inherit;

      &:after {
        @extend animation;

        content: '';
        position: absolute;
        left: 0;
        bottom: -5px;
        width: 0;
        height: 2px;
        background: #F5F5F5;
        box-shadow: 0 1px 3px rgba(0,0,0,.15);
      }

      &:hover {
        text-decoration: none;
        text-shadow: 0 1px 3px rgba(0,0,0,.2);

        &:after {
          width: 100%;
        }
      }
    }
  }
}


  /*display: none;*/
  /*@media (min-width: 1200px) {*/
    /*display: block;*/
  /*}*/
/*}*/

.show {
  display: block !important;
}

.inputCustom {
  justify-content: center;
  width: 100%;

  position: absolute;
  left: 0;
  bottom: 0;

  input[type=radio] {
    display: none;
  }

  label {
    @extend animation;
    display: inline-block;
    width: 12px;
    height: 12px;
    margin-left: 14px;

    border: 3px solid #fff;
    border-radius: 50%;
    background: #bec2c7;

    &:first-of-type {
      margin-left: 0;
    }
  }

  input:checked + label {
    border-color: #283645;
    background: none;
  }
}
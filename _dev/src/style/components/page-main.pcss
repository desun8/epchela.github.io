.page-main {

  @extend .wrap;
  @extend %flex;

  @media (--mobile) {
    justify-content: center;
  }

  a {
    @extend animation;
    /*@extend fixBlur;*/


    display: block;
    width: 300px;
    height: 300px;
    margin-bottom: 60px;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 0 2px rgba(0,0,0,.5);
    /*transform: scale(1);*/

    -webkit-backface-visibility: hidden;
    -ms-transform: translateZ(0); /* IE 9 */
    -webkit-transform: translateZ(0); /* Chrome, Safari, Opera */
    transform: translateZ(0);

    &:hover {
      /*box-shadow: 0 2px 4px rgba(0,0,0,.3);*/

      transform: scale(1.02);
      /*transform: translate3d(0,-3px,0);*/

    }

    @media (--mobileSmall), (--mobileRotate) {
      width: 280px;
      height: 280px;
    }

    img {
      @extend animation;
      /*@extend fixBlur;*/

      max-width: 100%;
      border-radius: 8px;
      /*overflow: hidden;*/

      -webkit-backface-visibility: hidden;
      -ms-transform: translateZ(0); /* IE 9 */
      -webkit-transform: translateZ(0); /* Chrome, Safari, Opera */
      transform: translateZ(0);



      &:hover {
        /*border-radius: 8px;*/
        /*zoom: 1.2;*/
        /*transform: scale(1.03);*/
      }
    }
  }
}
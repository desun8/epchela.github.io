.page-main {

  @extend .wrap;
  @extend %flex;

  @media (--mobile) {
    justify-content: center;
  }

  &_elem {
    @extend .wrap;
    @extend %flex;

    @media (--mobile) {
      justify-content: center;
    }

    &--hide {
      display: none;
    }
  }

  &_card {
    position: relative;
    @extend animation;
    /*@extend fixBlur;*/


    display: block;
    width: 300px;
    height: 300px;
    margin-bottom: 60px;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 0 2px rgba(0,0,0,.5);
    /*transform: scale(1);*/

    -webkit-backface-visibility: hidden;
    -ms-transform: translateZ(0); /* IE 9 */
    -webkit-transform: translateZ(0); /* Chrome, Safari, Opera */
    transform: translateZ(0);

    &:hover {
      /*box-shadow: 0 2px 4px rgba(0,0,0,.3);*/

      transform: scale(1.02);
      /*transform: translate3d(0,-3px,0);*/

    }

    @media (--mobileSmall), (--mobileRotate) {
      width: 280px;
      height: 280px;
    }

    &--app {
      padding: 10px 0;
      height: auto;
      transform: none;

      &:hover {
        transform: none;
        box-shadow: 0 2px 4px rgba(0,0,0,.3);
      }

      img {
        border-radius: 0 !important;
        margin-bottom: 10px;
      }

      h3 {
        margin-bottom: 10px;
      }

      p {
        padding: 0 10px;
        padding-bottom: 15px;
      }

      a {
        text-decoration: none;
      }

      .linkBlue {
        position: absolute;
        bottom: 10px;
        right: 10px;
      }
    }

    img {
      @extend animation;
      /*@extend fixBlur;*/

      max-width: 100%;
      border-radius: 8px;
      /*overflow: hidden;*/

      -webkit-backface-visibility: hidden;
      -ms-transform: translateZ(0); /* IE 9 */
      -webkit-transform: translateZ(0); /* Chrome, Safari, Opera */
      transform: translateZ(0);



      &:hover {
        /*border-radius: 8px;*/
        /*zoom: 1.2;*/
        /*transform: scale(1.03);*/
      }
    }
  }
}

.tabs {
  flex-basis: 100%;
  margin-bottom: 60px;
  text-align: center;

  &_elem {
    position: relative;
    background: none;
    outline: none;
    margin-right: 30px;
    padding: 0;
    border: none;
    font-size: 22px;
    color: var(--blackLight);
    cursor: pointer;

    &::after {
      @extend animation;

      content: '';
      position: absolute;
      left: 0;
      bottom: -5px;
      width: 0;
      height: 2px;
      border-radius: 5px;
      background-color: var(--mainColor);
    }

    &:hover {
      &::after {
        content: '';
        width: 100%;
      }
    }


    &--active {
      &::after {
        width: 100%;
        background-color: var(--red);
      }
    }
  }
}
